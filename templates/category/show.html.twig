{% extends 'base.html.twig' %}

{% block title %}All programs of the category{% endblock %}

{% block body %}
    <h1> {{ category[0].name}} </h1>
    {% for program in programs %}
        <ul>
            <li>{{ program.id}} / {{ program.title }} </li>
            <li>{{ program.synopsis }}</li>
            {# Lien vers la fiche de la série : #}
            <a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
        </ul>
     {% endfor %}

    <a href="{{ path('category_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}